<Window x:Class="lab10._1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab10._1"
        mc:Ignorable="d"
        Title="Регистрация пользователей" Height="300" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="250">
            <TextBlock Text="Логин:" Margin="0,5"/>
            <TextBox x:Name="loginTextBox" Margin="0,5"/>
            <TextBlock Text="Пароль:" Margin="0,5"/>
            <PasswordBox x:Name="passwordBox" Margin="0,5"/>
            <Button x:Name="addUserButton" Content="Добавить пользователя" 
                    Margin="0,20" Padding="10,5" Click="AddUserButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
